<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lcnch.cz3002.ntu.silverlink.fragment.MessageFragment">

    <LinearLayout
        android:id="@+id/ll_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_box_padding"
        android:background="@color/steel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/iv_profile_pic"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_record"
        android:background="@drawable/flat_button"
        android:contentDescription="@string/ib_record"/>

    <ListView
        android:id="@+id/lv_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ib_record"
        android:layout_below="@id/ll_friend"/>
</RelativeLayout>
